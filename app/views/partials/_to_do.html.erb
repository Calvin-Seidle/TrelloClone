<% @to_do.each do |task| %>
  <div class="panel panel-info">
    <div class="panel-heading">
      <h4><%= task.title %></h4>
    </div>  
    <div class="panel-body">
      <p class="text-muted"><%= task.created_at.strftime("%d %B %Y") %></p>
      <p><%= task.content %></p>
      <div class="row container">
        <%= link_to 'Show', task, class: "btn btn-xs btn-info" %>
        <%= link_to 'Edit', edit_task_path(task), class: "btn btn-xs btn-warning" %>
        <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
      </div><br>

      <div class="row container">
        <%= link_to 'Move >', change_task_path(task, state: "doing"), method: :put, class: "btn btn-default" %>
      </div>
    </div>    
  </div>
<% end %>


  