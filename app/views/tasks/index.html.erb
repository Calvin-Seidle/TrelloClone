<% if notice %>
  <div class="alert alert-info alert-dismissable fade in">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <strong><p id="notice"><%= notice %></p></strong>
  </div>
<% end %>

<div class="row">
	<div class="col-md-4 col-xs-12">
	  <h1>To Do</h1>
	  <div class="row">
	    <div class="col-md-6 col-xs-12">
			<%= render 'partials/to_do' %>
	    </div>
	  </div>
	</div>

	<div class="col-md-4 col-xs-12">
	  <h1>Doing</h1>
	  <div class="row">
	    <div class="col-md-6 col-xs-12">
			<%= render 'partials/doing' %>
	    </div>
	  </div>
	</div>

	<div class="col-md-4 col-xs-12">
	  <h1>Done</h1>
	  <div class="row">
	    <div class="col-md-6 col-xs-12">
			<%= render 'partials/done' %>
	    </div>
	  </div>
	</div>
</div> 



<div class="row">
  <div class="col-md-6 col-md-offset-3 col-xs-12">
    <%= link_to 'New Task', new_task_path, class: "btn btn-primary btn-block" %>
  </div>
</div>


